{
    "name": "opendaje/bc-canva",
    "description": "funny stuff...",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "DDD",
        "Bounded Context"
    ],
    "authors": [
        {
            "name": "Zerai Teclai",
            "email": "teclaizerai@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-gd": "*",
        "meyfa/php-svg": "^0.11.2",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "behat/behat": "^3.10",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "OpenDaje\\BcCanva\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenDaje\\BcCanva\\Tests\\": "tests/",
            "BcCanva\\Behat\\": "testsBehat/"
        }
    },
    "bin": [
        "bin/bc-canva"
    ],
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "target-directory": "tools"
        }
    }
}
