{
    "name": "opendaje/bc-canva",
    "type": "library",
    "description": "funny stuff...",
    "keywords": [
        "DDD",
        "Bounded Context"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Zerai Teclai",
            "email": "teclaizerai@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-gd": "*"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenDaje\\BcCanva\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "OpenDaje\\BcCanva\\Tests\\": "tests/" }
    },
    "extra": {
        "bamarni-bin": {
            "target-directory": "tools"
        }
    }
}
